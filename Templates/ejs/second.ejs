              <span>II</span>
            </div>
            <div class="cards_group_container__cards_count">
              <span>III</span>
            </div>
            <div class="cards_group_container__cards_count">
              <span>IV</span>
            </div>
            <div class="cards_group_container__cards_count">
              <span>V</span>
            </div>
          </div>
        </div>
        <% } %>
        <% const repeatSixCards = heroes.filter(item => item.repeats === 6) %>
        <% if(repeatSixCards.length) { %>
        <div class="cards_group_container">
          <% repeatSixCards.forEach(function(hero){ %>
          <div class="hero_card" style="background-image: url('../images/heroes-cards/<%= `${hero.name}.jpg`%>')"></div>
          <% }) %>
          <div type="I" class="cards_group_container__cards_counts">
            <div class="cards_group_container__cards_count">
              <span>I</span>
            </div>
            <div class="cards_group_container__cards_count">
              <span>II</span>
            </div>
            <div class="cards_group_container__cards_count">
              <span>III</span>
            </div>
            <div class="cards_group_container__cards_count">
              <span>IV</span>
            </div>
            <div class="cards_group_container__cards_count">
              <span>VI</span>
            </div>
          </div>
        </div>
        <% } %>
      </div>
    </div>
  </body>
</html>
